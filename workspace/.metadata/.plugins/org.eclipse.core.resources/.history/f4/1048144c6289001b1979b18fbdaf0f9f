package Q1712;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int A = sc.nextInt();	//고정비용
		int B = sc.nextInt();	//가변비용
		int C = sc.nextInt();	//판매비용
		System.out.println(BreakevenPoint(A, B, C));
	}
	public static int BreakevenPoint(int fix, int made, int sales) {
		int salesRate=0;
		while(fix + made*salesRate < sales*salesRate) {
			salesRate++;
		}
		return salesRate;
	}
}
