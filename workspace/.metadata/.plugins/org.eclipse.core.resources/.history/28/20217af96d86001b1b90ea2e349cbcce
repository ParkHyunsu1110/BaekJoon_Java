package Q2439;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		
		for(int i=1; i<=N; i++) {
			for(int h=1; h<=i; j++) {
				for(int j=N-1; j>0; j--) System.out.print(" ");
				for(int k=1; i<=i; k++) System.out.print("*");
			}
			
			System.out.println();
		}
	}

}
