package Q2439;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		sc.close();
		for(int i=1; i<=N; i++) {
			for(int j=1; j <= N-i; j++) {
				System.out.print(" ");
			}
			for(int k=0; i<i; k++) {
				System.out.print("*");
			}

			System.out.println();
		}
	}

}
